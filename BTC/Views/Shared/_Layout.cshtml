@using BE;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<UserApp> usermanager


<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BTC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="title" content="" />
    <link type="image/x-icon" href="~/image/tab-icon.png" rel="icon" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800%7CRoboto+Slab:300,400,700" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/danveer.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/donatefooter.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-dark navbar-expand-lg header">
            <div class="container p-0">
                <a class="navbar-brand " href="index.html"> <img src="~/image/logo headerjpg.jpg" alt="logo"> </a>
                <button class="navbar-toggler ml-auto mt-0 collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarSupportedContent" style="">
                    <ul class="nav navbar-nav ml-auto mobilemenu">
                        <li class="nav-item ">
                            <a class="nav-link text-right" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item ">
                            <a href="#" class="nav-link text-right"></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-right" ></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-right " ></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-right"></a>
                        </li>
                         <li class="nav-item ">
                            <a class="nav-link text-right" ></a>
                        </li>
                         <li class="nav-item ">
                            <a class="nav-link text-right" ></a>
                        </li>
                         <li class="nav-item ">
                            <a class="nav-link text-right" ></a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await usermanager.FindByNameAsync(User.Identity.Name);

                            <li class="nav-item">
                                <a    >@user.Name</a>
                                <a  class="nav-link text-right"asp-controller="Account" asp-action="Logout">خروج</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-right" asp-controller="Account" asp-action="Login">ورود/ثبت نام</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*@RenderSection("AdditionalScripts", required: false)*@
    <footer class="footer-part " id="myFooterPage" >
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <a href="index.html"><img class="footer-logo" src="~/image/logo headerjpg.jpg" alt="footer-logo"></a>
                    <p class="footer-p"> دیگران کاشتند و ما خوردیم، ما می کاریم دیگران بخورند<br>آن کس که نکو کرد و بدی دید، کدام است؟</p>
                    <ul class="footer-detail pl-0">
                        <li>
                            <img src="~/image/location.png" class="" alt="address">
                            <span class="company-detail">کرمان میدان پژوهش دانشگاه شهید باهنر کرمان<br /></span>
                        </li>
                        <li>
                            <img src="~/image/mail.png" class="" alt="mailaddress">
                            <p  class="company-detail">Brightertommorrowcharity@gmail.com</p>
                        </li>
                        <li>
                            <img src="~/image/phone.png" class="" alt="phone">
                            <p  class="company-detail">+98 9915914043</p>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 footer-links">
                    <h3 class="heading-five" >درباره ما</h3>
                    <ul class="footer-menu p-0">
                        <li><a asp-controller="Home" asp-action="AboutUs">در مورد ما</a></li>
                        <li><a asp-controller="Home" asp-action="HowToUse">نحوه کار با سایت</a></li>

                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 footer-links">
                    <h3 class="heading-five">ارتیاط با ما</h3>
                    <ul class="footer-menu p-0">
                        <li><a asp-controller="Home" asp-action="ContactUs">گزارش به ما</a></li>
                    
                    </ul>
                </div>
               
            </div>
        </div>
        <div class="bottom-footer">
            <div class="container">
                <div class="row">

                    <div class="social-icon ml-auto mr-3">

                        <a href="#" title="Follow on instagram"><i class="fa fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.js"></script>
    <script src="js/custom.js"></script>
</body>
</html>
